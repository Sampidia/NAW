            android:id="@+id/player2Row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/boardBackground"
            app:layout_constraintStart_toStartOf="@id/boardBackground"
            app:layout_constraintTop_toTopOf="@id/boardBackground">

            <!-- Player 2's Pits - ImageView based for easy replacement -->
