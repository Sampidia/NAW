                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/pitImage_8"
                    app:layout_constraintStart_toStartOf="@id/pitImage_8"
                    app:layout_constraintTop_toBottomOf="@id/pitImage_8" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pitContainer_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/pitImage_7"
