                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/wood_pit_shape"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pitLabel_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="12"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/pitImage_11"
                    app:layout_constraintStart_toStartOf="@id/pitImage_11"
                    app:layout_constraintTop_toBottomOf="@id/pitImage_11" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pitContainer_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/pitImage_10"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/wood_pit_shape"
