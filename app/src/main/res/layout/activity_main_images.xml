                    app:layout_constraintStart_toStartOf="@id/pitImage_6"
                    app:layout_constraintTop_toBottomOf="@id/pitImage_6" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!-- Player 1's Pits Row (Bottom Row) -->
        <LinearLayout
            android:id="@+id/player1Row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/boardBackground"
            app:layout_constraintStart_toStartOf="@id/boardBackground"
            app:layout_constraintTop_toBottomOf="@id/player2Row">

            <!-- Player 1's Pits - ImageView based for easy replacement -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pitContainer_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/pitImage_0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/wood_pit_shape"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pitLabel_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/pitImage_0"
                    app:layout_constraintStart_toStartOf="@id/pitImage_0"
                    app:layout_constraintTop_toBottomOf="@id/pitImage_0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pitContainer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/pitImage_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/wood_pit_shape"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pitLabel_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/pitImage_1"
                    app:layout_constraintStart_toStartOf="@id/pitImage_1"
                    app:layout_constraintTop_toBottomOf="@id/pitImage_1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pitContainer_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/pitImage_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/wood_pit_shape"
                    android:scaleType="centerCrop"
