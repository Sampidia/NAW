                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/pitImage_7"
                    app:layout_constraintStart_toStartOf="@id/pitImage_7"
                    app:layout_constraintTop_toBottomOf="@id/pitImage_7" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pitContainer_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/pitImage_6"
                    android:layout_width="60dp"
