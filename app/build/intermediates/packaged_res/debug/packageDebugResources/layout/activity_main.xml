<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F4F8"
    tools:context=".MainActivity">

    <!-- TOP HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Player 1 Section -->
        <ImageView
            android:id="@+id/player1Avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/char_ayo_portrait"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/player1Score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/player1Score" />

        <TextView
            android:id="@+id/player1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Player 1: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/player1Avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Center Icons with Logo -->
        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/logoImage"
            app:layout_constraintStart_toEndOf="@id/player1Score"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/logo"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/menuButton"
            app:layout_constraintStart_toEndOf="@id/saveButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/player2Score"
            app:layout_constraintStart_toEndOf="@id/logoImage"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Player 2 Section -->
        <TextView
            android:id="@+id/player2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="0 :AI"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/player2Avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/player2Avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/char_ai_portrait"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/player2Score"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/player2Score" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- GAME BOARD -->
    <GridLayout
        android:id="@+id/ayoBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:columnCount="6"
        android:rowCount="2"
        app:layout_constraintBottom_toTopOf="@id/gameStatusLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <!-- Player 2's Pits (Top Row) -->
        <TextView android:id="@+id/pit_11" style="@style/AyoPit" android:text="4" />
        <TextView android:id="@+id/pit_10" style="@style/AyoPit" android:text="4" />
        <TextView android:id="@+id/pit_9" style="@style/AyoPit" android:text="4" />
        <TextView android:id="@+id/pit_8" style="@style/AyoPit" android:text="4" />
        <TextView android:id="@+id/pit_7" style="@style/AyoPit" android:text="4" />
        <TextView android:id="@+id/pit_6" style="@style/AyoPit" android:text="4" />

        <!-- Player 1's Pits (Bottom Row) -->
        <TextView android:id="@+id/pit_0" style="@style/AyoPit" android:text="4" />
        <TextView android:id="@+id/pit_1" style="@style/AyoPit" android:text="4" />
        <TextView android:id="@+id/pit_2" style="@style/AyoPit" android:text="4" />
        <TextView android:id="@+id/pit_3" style="@style/AyoPit" android:text="4" />
        <TextView android:id="@+id/pit_4" style="@style/AyoPit" android:text="4" />
        <TextView android:id="@+id/pit_5" style="@style/AyoPit" android:text="4" />

    </GridLayout>

    <!-- GAME STATUS -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameStatusLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/currentPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Turn"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            app:layout_constraintBottom_toTopOf="@id/gameMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gameMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Welcome to Ayo!"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currentPlayer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
