<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".sound.VolumeSettingsFragment">

    <!-- Row 1: Sound Effects -->
    <TextView
        android:id="@+id/soundEnabledLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sound Effects (ON/OFF)"
        android:textSize="18sp"
        android:textColor="#8B4513"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingTop="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/soundEnabledSwitch"
        app:layout_constraintBottom_toTopOf="@+id/effectsVolumeLabel" />

    <Switch
        android:id="@+id/soundEnabledSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="OFF"
        android:textOn="ON"
        android:textColor="#8B4513"
        android:thumbTint="#8B4513"
        android:trackTint="#654321"
        android:switchMinWidth="60dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/soundEnabledLabel"
        app:layout_constraintBottom_toTopOf="@+id/volumeSeekBar"
        android:layout_marginTop="-12dp" />

    <!-- Row 2: Effects Volume -->
    <TextView
        android:id="@+id/effectsVolumeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Effect Volume"
        android:textSize="18sp"
        android:textColor="#8B4513"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/soundEnabledLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/volumeSeekBar"
        app:layout_constraintBottom_toTopOf="@+id/musicVolumeLabel" />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="70"
        android:progressTint="#8B4513"
        android:thumbTint="#8B4513"
        app:layout_constraintTop_toBottomOf="@+id/soundEnabledSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/effectsVolumeLabel"
        app:layout_constraintBottom_toTopOf="@+id/musicVolumeLabel" />

    <!-- Row 3: Music Volume -->
    <TextView
        android:id="@+id/musicVolumeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Music Volume"
        android:textSize="18sp"
        android:textColor="#8B4513"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/effectsVolumeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/backgroundVolumeSeekBar"
        app:layout_constraintBottom_toBottomOf="parent" />

    <SeekBar
        android:id="@+id/backgroundVolumeSeekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="70"
        android:progressTint="#8B4513"
        android:thumbTint="#8B4513"
        app:layout_constraintTop_toBottomOf="@+id/effectsVolumeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/musicVolumeLabel"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
